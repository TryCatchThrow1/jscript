<DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
</head>
	<body>
		<script>
			var calculator = {

				readValues: function(){
					this.arg1 = +prompt("Введите первый аргумент", 0);
					this.arg2 = +prompt("Введите второй аргумент", 0);
				},

				sum : function(){
					return this.arg1 + this.arg2;
				},

				mul : function(){
					return this.arg1 * this.arg2;
				}

			}

			calculator.readValues();
			alert(calculator.sum());
			alert(calculator.mul());

		</script>
	</body>
</html>
