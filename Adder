	<body>
		<script>
		function Adder(startingValue){
			this.value = startingValue;

			this.addInput = function(){
				this.value += +prompt("?", 0);
			};

			this.showValue = function(){
				alert(value);
			};
		}

		var adder = new Adder(1);
		adder.addInput();
		adder.addInput();
		adder.showValue();
		</script>
	</body>
